rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /products/{product} {
      allow read: if true; // Anyone can view products
      allow create, update, delete: if request.auth != null; // Only logged-in admins can edit
    }
    match /contacts/{contact} {
      allow read, create: if request.auth != null; // Only admins can see messages
    }
  }
}